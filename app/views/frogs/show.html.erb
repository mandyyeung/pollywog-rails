<h1><%= @frog.name %> Frog</h1>
<p>Color: <%= @frog.color %></p>
<p>Lives: <a href="/ponds/<%= @frog.pond.id %>"><%= @frog.pond.name %></a></p>
<% unless @frog.tadpoles.empty? %>
  <h2>Children</h2>
  <ol>
    <% @frog.tadpoles.each do |tadpole| %>
      <li><a href="/tadpoles/<%= tadpole.id %>"><%= tadpole.name %></a></li>
    <% end %>
  </ol><br>
<% end %>

<%= link_to 'Create new tadpole baby', new_frog_tadpole_path(@frog) %>
<br><br>
<%= link_to 'Back', frogs_path %> |
<%= link_to 'Edit', edit_frog_path(@frog) %> |
<%= link_to 'Delete', @frog, method: :delete, data: { confirm: 'Are you sure?' }%>
